<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheet/style.css">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <div class="w-full h-full bg-zinc-900 p-10 text-white ">
    <div class="nav text-blue-600 mb-10">
      <a href="/">Back to Home </a>
    </div>
    <h1 class="text-3xl tracking-tighter mb-3">All User</h1>
    <div class="users flex gap-4 flex-wrap">
      <!-- user 1 -->
      <% if(users.length>0) { %>
        <% users.forEach(function(user){ %>
          <div class="user max-w-72 p-4 bg-zinc-800 rounded-lg ">
            <div class="w-full h-52 rounded-lg bg-red-600 overflow-hidden">
              <img class="w-full h-full object-cover   " src="<%= user.image %>" alt="">
            </div>
            <h3 class="text-xl mt-3 tracking-tighter ">
              <%= user.name %>
            </h3>
            <h5 class="text-zinc-500">
              <%= user.email %>
            </h5>
            <div class="gap-16 flex mt-4">
              <a href="/edit/<%= user._id%>"  class="text-white">Edit user</a>
              <a href="/delete/<%= user._id%>" class="text-red-500">Delete User</a>
            </div>
          </div>
          <% }) %>
            <% } else { %>
              <h1>There have no any active users</h1>
              <% }%>
    </div>
  </div>

</body>

</html>